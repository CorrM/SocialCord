{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ESNext",
        "allowJs": true,
        "declaration": false,
        "alwaysStrict": false,
        "strict": true,
        "noImplicitUseStrict": true,
        "strictNullChecks": true,
        "outDir": "dist",
        "sourceMap": false,
        "lib": [
            "ESNext",
            "dom"
        ],
        "removeComments": false
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}