{
    "compilerOptions": {
        "module": "CommonJS",
        "noImplicitUseStrict": true,
        "alwaysStrict": false,
        "strict": true,
        "declaration": false,
        "strictNullChecks": true,
        "target": "ESNext",
        "outDir": "dist",
        // "outFile": "dist/socialcord.plugin.js",
        "moduleResolution": "node",
        "sourceMap": false,
        "lib": [
            "es2015",
            "dom"
        ],
        "rootDir": "src",
        "removeComments": false
    },
    "include": [
        "src/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}